.login
  .login-header
    =link_to root_path, class: 'signup-header__logo'do
      = image_tag "logo.svg",  size: "185x49"
  
  .login-main
    .login-contents-no-acount
      アカウントをお持ちでない方はこちら
      = link_to new_user_registration_path, class: "login-contents-no-acount__signup-btn" do
        新規会員登録
    .login-sns
      = link_to user_facebook_omniauth_authorize_path, class: "login-sns__facebook" do
        Facebookでログイン
        = fa_icon 'facebook-square', class: 'fab.fa-facebook-square icon'
      = link_to user_google_oauth2_omniauth_authorize_path, class: "login-sns__google" do
        Googleでログイン
        = fa_icon 'google', class: 'fab.fa-google icon'
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login-text-form
        .login-text-form__email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login-input"
        .login-text-form__password
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "login-input"
        .login-text-form__action
          = recaptcha_tags
        .login-text-form__action
          = f.submit "ログイン", class: "login-btn"
        .contents-links
          パスワードをお忘れの方
          
  .login-footer
    .footer-links
      .footer-links__link
        プライバシーポリシー
      .footer-links__link
        メルカリ利用規約
      .footer-links__link
        特定商取引に関する表記
    .login-footer__img
      %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2296184308"}
      %p © 2019 Mercari

.signup
  .signup-header
    =link_to root_path, class: 'signup-header__logo'do
      = image_tag "logo.svg",  size: "185x49"
  .signup-main
    .signup-contents
      .signup-contents__title
        新規会員登録
      .signup-contents__form
        .signup-btn
          = link_to user1_signups_path, class: "signup-btn__email" do
            メールアドレスで登録する
            = fa_icon 'envelope', class: 'fas.fa-envelope icon'
          = link_to user_facebook_omniauth_authorize_path, class: "signup-btn__facebook" do
            Facebookで登録する
            = fa_icon 'facebook-square', class: 'fab.fa-facebook-square icon'
          = link_to user_google_oauth2_omniauth_authorize_path, class: "signup-btn__google" do
            Googleで登録する
            = fa_icon 'google', class: 'fab.fa-google icon'
  = render 'signups/signup_footer'
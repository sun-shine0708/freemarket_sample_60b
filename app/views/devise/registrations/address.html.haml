.signup-header
  %h1.logo
    %img{:alt => "", :src => "img/mercari_logo.png"}/
  .signup-bar
    %ol.signup-lists
      %li.signup-list
        会員情報
        .list-round-left.active-round
      %li.signup-list
        電話番号認証
        .list-round-complete.active-round
      %li.signup-list.active-title
        お届け先住所入力
        .list-round-active.active-round
      %li.signup-list
        支払い方法
        .list-round
      %li.signup-list
        完了
        .list-round-right
.signup-main
  .main-contents
    .main-contents-title 住所入力
    .form-group
      %div
        %label お名前
        %span.form-require 必須
      .flexer
        %input.input-box.first-half{:name => "family_name_kanji", :placeholder => "例) 山田", :type => "text"}/
        %input.input-box.second-half{:name => "family_name_kanji", :placeholder => "例) 彩", :type => "text"}/
    .form-group
      %div
        %label お名前カナ(全角)
        %span.form-require 必須
      .flexer
        %input.input-box.first-half{:name => "family_name_kana", :placeholder => "例) ヤマダ", :type => "text"}/
        %input.input-box.second-half{:name => "family_name_kana", :placeholder => "例) アヤ", :type => "text"}/
    .form-group
      %label{:for => "postnumber"} 郵便番号
      %span.form-require 必須
      %input.input-box{:name => "postnumber", :placeholder => "例) 123-4567", :type => "text"}/
    .form-group
      %label{:for => "password"} 都道府県
      %span.form-require 必須
      %input.input-box{:name => "password2", :placeholder => "7文字以上", :type => "password"}/
    .form-group
      %label{:for => ""} 市区町村
      %span.form-require 必須
      %input.input-box{:name => "", :placeholder => "例) 横浜市緑区", :type => "text"}/
    .form-group
      %label{:for => ""} 番地
      %span.form-require 必須
      %input.input-box{:name => "", :placeholder => "例) 青山1-1-1", :type => "text"}/
    .form-group
      %label{:for => ""} 建物名
      %span.form-any 任意
      %input.input-box{:name => "", :placeholder => "例) 柳ビル103", :type => "text"}/
    .form-group
      %label{:for => ""} 電話
      %span.form-any 任意
      %input.input-box{:name => "", :placeholder => "例) 09012345678", :type => "text"}/
    .form-group
      %button.next-button{:type => "submit"} 次へ進む
.signup-footer
  %p.footer-links
    %a.footer-link{:href => "#"} プライバシーポリシー
    %a.footer-link{:href => "#"} メルカリ利用規約
    %a.footer-link{:href => "#"} 特定商取引に関する表記
  %img.footer-img{:src => "img/logo-gray.svg"}/

- breadcrumb :"users/address"

.header
  = render "layouts/header"

= render "layouts/nav"
.address
  .address__container
    = render 'side-bar'
    .address-content
      .confirmation-head
        発送元・お届け先住所変更
      = form_for @streetaddress, url: user_path, method: :patch do |f|
        .form-group
          .address-labelbox
            %label.form-label お名前
            %span.form-require 必須
            = f.text_field :last_name, placeholder: '例) 山田', class: 'input-box first-half'
            = f.text_field :first_name, placeholder: '例) 彩', class: 'input-box second-half'
        .form-group
          .address-labelbox
            %label.form-label お名前カナ(全角)
            %span.form-require 必須
            = f.text_field :last_name_kana, placeholder: '例) ヤマダ', class: 'input-box first-half'
            = f.text_field :first_name_kana, placeholder: '例) アヤ', class: 'input-box second-half'
        .form-group
          .address-labelbox
            %label.form-label 郵便番号
            %span.form-require 必須
            = f.text_field :post_number, placeholder: '例) 123-4567', class: 'input-box'
        .form-group
          .address-labelbox
            %label.form-label 都道府県
            %span.form-require 必須
            .select-box2
              = f.select :prefecture, Streetaddress.prefectures.keys
              = fa_icon 'sort-down',class: 'fa-sort-down2'
        .form-group
          .address-labelbox
            %label.form-label 市区町村
            %span.form-require 必須
            = f.text_field :city, placeholder: '例) 横浜市緑区', class: 'input-box'
        .form-group
          .address-labelbox
            %label.form-label 番地
            %span.form-require 必須
            = f.text_field :address, placeholder: '例) 青山1-1-1', class: 'input-box'
        .form-group
          .address-labelbox
            %label.form-label 建物名
            %span.form-any 任意
            = f.text_field :building_name, placeholder: '例) 柳ビル103', class: 'input-box'
        .form-group
          .address-labelbox
            %label.form-label 電話
            %span.form-any 任意
            = f.text_field :phone_number, placeholder: '例) 09012345678', class: 'input-box'
        .form-group
          = f.submit "変更する", class: 'next-button'




.app-banner
  = render "layouts/banner"

.footer
  = render "layouts/footer"

.display-btn
  = render "layouts/display_btn"
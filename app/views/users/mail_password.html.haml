.header
  = render "layouts/header"

.mail-password
  .mail-password-container__side-bar
    = render 'side-bar'

    .mail-password-content
      .mail-password-head
        メール/パスワード
      .mail-password-information
        .mail-password-box
          .mail
            .mp-label 
              メールアドレス
            %input.mp-form{name: "email", placeholder: "PC・携帯どちらでも可", type: "email", value: ""}/
            .mp-text
              メールアドレスを変更すると確認メールが送信されます。メール内のURLをクリックすると変更完了です。
          .password
            .mp-label
              現在のパスワード
            %input.mp-form{name: "current_password", type: "password"}/
            .mp-label
              新しいパスワード
            %input.mp-form{name: "password", placeholder: "7文字以上", type: "password"}/
            .mp-label
              新しいパスワード確認
            %input.mp-form{name: "password_confirmation", placeholder: "7文字以上", type: "password"}/
            .mp-text
              パスワードを設定したい場合は上記をすべて入力してください。（設定しない場合は空欄）
          %button.btn.mail-password-btn{type: "submit"} 変更する

.app-banner
  = render "layouts/banner"

.footer
  = render "layouts/footer"

.display-btn
  = render "layouts/display_btn"

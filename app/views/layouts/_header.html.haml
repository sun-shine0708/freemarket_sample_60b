.content
  .content__image
    %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308"}
  .content__form
    %input.input-default{type: "search", placeholder: "何かお探しですか？", value: ""}
    .search-box
      =link_to "", class: "icon-search" do
        = fa_icon 'search',class: 'search-btn'
.nav
  .nav-left
    .nav-left__cate
      = fa_icon 'list-ul', class: 'list-btn'
      カテゴリーから探す
    .nav-left__bland
      = fa_icon 'tag', class: 'tag-btn'
      ブランドから探す
  .nav-right
    .nav-right__like
      =link_to "", class: "pc-header-menu-link" do
        = fa_icon 'heart-o', class: 'heart-btn'
        いいね ! 一覧
    .nav-right__info
      =link_to "", class: "pc-header-menu-link" do
        = fa_icon 'bell-o', class: 'bell-btn'
        お知らせ
    .nav-right__todo
      =link_to "", class: "pc-header-menu-link" do
        = fa_icon 'check', class: 'check-btn'
        やることリスト
    .nav-right__mypage
      =link_to "", class: "pc-header-menu-link" do
        = fa_icon 'user-circle', class: 'user-circle-btn'
        マイページ